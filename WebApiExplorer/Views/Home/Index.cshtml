    <% _.each(measureNames, function(name) { %>
      <th><%- name %></th>
    <% }); %>
    </tr>
  </thead>
  <tbody>
    <% _.each(items, function(item) { %>
    <tr>
      <% if (!periodic) { %>
      <td><%- item.d.format("MMM D YYYY") %></td>
      <% } else { %>
      <td><%- item.s.format("MMM D YYYY") %></td>
      <td><%- item.e.format("MMM D YYYY") %></td>
      <% } %>
      <% _.each(item.m, function(m) { %>
      <% if (m === null) { %>
      <td></td>
      <% } else { %>
      <td><%- m.toFixed(5) %></td>
      <% } %>
      <% }); %>
    </tr> 
    <% }); %>
  </tbody>
</table>
</script>


